// Add this to your existing Flow Management component
// Import at the top of your file if not already imported
// const { useState, useEffect } = React;

// Add within the component, with your other state variables
const [figmaLink, setFigmaLink] = useState('');

// Add your webhook
const figmaLinkWebhook = 'https://hook.us2.make.com/dli1k9eq8vpedlaq247doxews2dv7u6o';

// Add this function to fetch the Figma link
const fetchFigmaLink = async () => {
  try {
    const response = await fetch(figmaLinkWebhook);
    
    if (!response.ok) {
      console.error('Failed to fetch Figma link');
      return;
    }
    
    const data = await response.text();
    setFigmaLink(data.trim());
  } catch (error) {
    console.error('Error fetching Figma link:', error);
  }
};

// Add this to your useEffect
useEffect(() => {
  fetchFlows();
  fetchFigmaLink(); // Add this line to your existing useEffect
}, []);

// Add this JSX to your header section
{figmaLink && (
  <a 
    href={figmaLink}
    target="_blank"
    rel="noopener noreferrer"
    className="px-4 py-2 flex items-center gap-2 bg-gradient-to-r from-purple-900 to-indigo-800 hover:from-purple-800 hover:to-indigo-700 text-white rounded transition-all duration-300 border border-purple-500 shadow-lg hover:shadow-purple-600/20"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round">
      <path d="M5 5.5A3.5 3.5 0 0 1 8.5 2H12v7H8.5A3.5 3.5 0 0 1 5 5.5z"></path>
      <path d="M12 2h3.5a3.5 3.5 0 1 1 0 7H12V2z"></path>
      <path d="M12 12.5a3.5 3.5 0 1 1 7 0 3.5 3.5 0 1 1-7 0z"></path>
      <path d="M5 19.5A3.5 3.5 0 0 1 8.5 16H12v3.5a3.5 3.5 0 1 1-7 0z"></path>
      <path d="M5 12.5A3.5 3.5 0 0 1 8.5 9H12v7H8.5A3.5 3.5 0 0 1 5 12.5z"></path>
    </svg>
    View Figma Design
  </a>
)}
